<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backportrait" >

    <Button
        android:id="@+id/btnMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="185dp"
        android:layout_toLeftOf="@+id/btnRecomecar"
        android:background="@drawable/mainmenuplaca"
        android:text=" " />

    <Button
        android:id="@+id/btnQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRecomecar"
        android:layout_marginLeft="36dp"
        android:layout_toRightOf="@+id/btnRecomecar"
        android:background="@drawable/quitplaca"
        android:text=" " />

    <Button
        android:id="@+id/btnRecomecar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/btnMenu"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="225dp"
        android:background="@drawable/restart"
        android:text=" " />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="204dp"
        android:background="@drawable/losttittle"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:typeface="monospace" />

</RelativeLayout>