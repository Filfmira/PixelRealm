
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backportrait" >

    <Button
        android:id="@+id/btnq2"
        android:layout_width="280dp"
        android:layout_height="265dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="119dp"
        android:layout_toRightOf="@+id/btnPausa"
        android:background="@drawable/quitplaca"
        android:text=" " />

    <Button
        android:id="@+id/btnm2"
        android:layout_width="280dp"
        android:layout_height="265dp"
        android:layout_alignBaseline="@+id/btnq2"
        android:layout_alignBottom="@+id/btnq2"
        android:layout_toLeftOf="@+id/btnPausa"
        android:background="@drawable/mainmenuplaca"
        android:text=" " />

    <Button
        android:id="@+id/btnPausa"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/btnq2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="276dp"
        android:background="@drawable/pausa"
        android:text=" " />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="205dp"
        android:background="@drawable/pausetitle"
        android:text=" " />

</RelativeLayout>
